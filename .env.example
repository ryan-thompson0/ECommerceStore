# Environment Configuration
# Copy this file to .env.local and fill in the values

# =============================================================================
# API Configuration
# =============================================================================
# FakeStore API base URL (required)
NEXT_PUBLIC_API_URL=https://fakestoreapi.com

# =============================================================================
# App Configuration
# =============================================================================
# Application name
NEXT_PUBLIC_APP_NAME=ShopHub

# Application URL (required for production deployment)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# Feature Flags (Optional)
# =============================================================================
# Enable analytics tracking
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# =============================================================================
# Analytics Services (Optional)
# =============================================================================
# Google Analytics Measurement ID
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics (automatically enabled on Vercel)
# No configuration needed

# =============================================================================
# Error Logging (Optional)
# =============================================================================
# Sentry DSN for error tracking and monitoring
# NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# =============================================================================
# Development Settings
# =============================================================================
# Node environment (automatically set by Next.js)
NODE_ENV=development
